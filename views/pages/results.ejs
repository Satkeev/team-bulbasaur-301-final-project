<%- include ('../partials/head.ejs') %>
<body>
  <header>
    <%- include ('../partials/header.ejs') %>
  </header>
  <% shows.forEach(show => { %>
   <%#if (show.show) { %>
    <form action="/details" method="GET">
    <p><%= show.name %></p>
    <input type="hidden" value="<%=show.id%>" name="id" />
    <input type="hidden" value="https://image.tmdb.org/t/p/w260_and_h390_bestv2<%=show.poster_path%>" name="image_url" />
    <img src="https://image.tmdb.org/t/p/w260_and_h390_bestv2<%=show.poster_path%>" />
    <button class="detailButton">See Details</button>
    </form>
  <%# } %>
  <% }) %>
  <footer><%- include ('../partials/footer.ejs') %></footer>
</body>
</html>