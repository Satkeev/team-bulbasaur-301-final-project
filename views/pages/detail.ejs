<%- include ('../partials/head.ejs') %>
<body>
  <header>
    <%- include ('../partials/header.ejs') %>
  </header>
  <h1><%=show.title%></h1>
  <p><%=show.overview%></p>
  <p><%=show.genres%></p>
  <p><%=show.rating%></p>
  <p><%=show.year%></p>
  <p><%=show.available_translations%></p>
  <img src="<%= show.image_url %>"/>
  <form action="/collection" method="POST">
    <input type="hidden" value="<%=show.title%>" name="title" />
    <input type="hidden" value="<%=show.overview%>" name="overview" />
    <input type="hidden" value="<%=show.genres%>" name="genres" />
    <input type="hidden" value="<%=show.rating%>" name="rating" />
    <input type="hidden" value="<%=show.year%>" name="year" />
    <input type="hidden" value="<%=show.available_translations%>" name="available_translations" />
    <input type="hidden" value="<%=show.image_url%>" name="image_url" />
    <input type="hidden" value="<%=show.tmdbId%>" name="tmdbId" />
    <button id="addButton">Add to Collection</button>
    <p type="hidden" class="preState">Added to Your Collection!</p>
  </form>
  <footer><%- include ('../partials/footer.ejs') %></footer>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="crossorigin="anonymous"></script>
  <script src="../../js/app.js"></script>
</body>
</html>