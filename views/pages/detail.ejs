<%- include ('../partials/head.ejs') %>
<body>
  <header>
    <%- include ('../partials/header.ejs') %>
  </header>
  <main>
    <div class="detailPage">
      <h2 class="titleShow"><%=show.title%></h2>
      <img src="<%= show.image_url %>" class="imgShow"/>
      <div class="detailShow">
        <p class="cap"><span>Genre:</span> <%=show.genres%></p>
        <p><i style="color: rgb(252, 206, 21);" class="fas fa-star"></i> <%=show.rating%> / 10</p>
        <p><span>Year:</span> <%=show.year%></p>
        <% if (show.platforms) { %>
          <p><span>Platforms: </span><%=show.platforms%></p>
          <% } %>
        <p><span>Available translations:</span> <%=show.available_translations%></p>
      </div>
      <p class="overviewShow"><span>Overview:</span> <%=show.overview%></p>
      <form action="/collection" method="POST">
        <input type="hidden" value="<%=show.title%>" name="title" />
        <input type="hidden" value="<%=show.overview%>" name="overview" />
        <input type="hidden" value="<%=show.genres%>" name="genres" />
        <input type="hidden" value="<%=show.rating%>" name="rating" />
        <input type="hidden" value="<%=show.year%>" name="year" />
        <input type="hidden" value="<%=show.available_translations%>" name="available_translations" />
        <input type="hidden" value="<%=show.image_url%>" name="image_url" />
        <input type="hidden" value="<%=show.tmdbId%>" name="tmdbId" />
        <input type="hidden" value="<%=show.traktId%>" name="traktId" />
        <input type="hidden" value="<%=show.platforms%>" name="platforms" />
        <section class="buttonShow">
        <button id="addButton" class="detailButton">Add to Collection</button>
        <p type="hidden" class="preState">Added to Your Collection!</p>
        </section>
      </form>
    </div>
  </main>
  <footer><%- include ('../partials/footer.ejs') %></footer>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="crossorigin="anonymous"></script>
  <script src="../../js/app.js"></script>
</body>
</html>